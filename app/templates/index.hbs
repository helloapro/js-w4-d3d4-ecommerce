<div class="row">
  <div class="col-sm-9">
    {{item-list items=model}}
  </div>
  <div class="col-sm-3 well">
    {{shopping-cart}}
  </div>
</div>

<div class="ui link cards">
  <div class="card">
    <div class="image">
      <img src="/images/avatar/large/veronika.jpg">
    </div>
