<h2>My Cart:</h2>
<hr>
{{#each shoppingCart.items as |item|}}
  <h4>{{item.name}}</h4>
  <p class='cart-quantity'>
    <div class="ui buttons">
      <button class="ui negative button" {{action "subtractOne" item}}>-</button>
      <div class="or" data-text={{item.numberInCart}}></div>
      <button class="ui positive button" {{action "addOne" item}}>+</button>
    </div>
    x {{item.price}}
    <button class="delete" {{action 'removeFromCart' item}}><i class="trash icon"></i></button>
  </p>
  <hr>
{{/each}}
<h4 class="pull-right">Total: ${{shoppingCart.price}}</h4>
