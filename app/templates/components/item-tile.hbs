<div class="ui card">
  <div class="image">
    {{#link-to 'item' item.id}}<img class="item-image" src={{item.image}}>{{/link-to}}
  </div>
  <div class="content">
    <p class='pull-right'>
      {{#if item.totalRating}}
        ({{item.reviews.length}} reviews) {{ui-rating initialRating=item.aveRating maxRating=5 interactive=false}}
      {{/if}}
    </p>
    {{#link-to 'item' item.id}}<h4 class="header">{{item.name}}</h4>{{/link-to}}
    <div class="meta">
        <span class="date">{{in-stock item.inventory}}</span>
    </div>
    <div class="description">
      {{item.description}}
    </div>
  </div>
  <div class="extra content">
      <i class="cart icon"></i>
      {{item.price}}
      {{#if inStock}}
      <button class='btn btn-info pull-right' {{action 'addToCart' item}}>Buy</button>
      {{/if}}
  </div>
</div>
