<div class='well'>
  <h3>Review this Bot</h3>
  <div class='form-group'>
    <label>Rating:</label>
    {{ui-rating
    initialRating=0
    rating=review.rating
    maxRating=5
    onRate=(action (mut rating))}}{{rating}}
  </div>
  <div class='form-group'>
    <label>Your name:</label>
    {{input value=author id="author" class='form-control'}}
  </div>
  <div class='form-group'>
    <label>Review:</label>
    {{textarea value=content id="content" rows=4 class='form-control'}}
  </div>
  <button {{action 'addReview'}} class='btn btn-primary'>Submit</button>
</div>
